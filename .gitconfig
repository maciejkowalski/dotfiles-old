[color]
  ui = auto
  interactive = auto
  grep = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.git.ignore
  attributesfile = ~/.git.attributes
  editor = vim.basic -c startinsert
  # autocrlf = true

[advice]
  # statusHints = false

[alias]
  a = add
  b = branch
  c = commit -m
  cx = commit -am
  co = checkout
  d = diff
  dd = diff HEAD
  df = diff --color-words
  fix = commit --amend
  l = !bash -ic 'source ~/.githelpers && pretty_git_log_short'
  lk = !bash -ic 'source ~/.githelpers && pretty_git_log_medium'
  lkj = !bash -ic 'source ~/.githelpers && pretty_git_log_full'
  m = merge
  s = status -sb
  w = whatchanged

[push]
  default = current

[branch]
  autosetupmerge = true

[merge]
  summary = true
  stat = true


